@model Product
@{
    string title = ViewBag.Action + " Product";
    ViewBag.Title = title;

}

<h1>@ViewBag.Title</h1>

<form asp-controller="Product" asp-action="Update" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="CategoryID">Category</label>
        <select asp-for="CategoryID" asp-items="@(new SelectList(ViewBag.Categories,"CategoryID","Name",Model.CategoryID.ToString()))"
                class="form-control"></select>
        <div class="form-group">
            <label asp-for="Code">Code</label>
            <input asp-for="Code" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" class="form-control" />
        </div>

        <input type="hidden" asp-for="CategoryID" />
        <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
        <a asp-controller="Product" asp-action="List" class="btn btn-primary">Cancel</a>
    </div>
</form>