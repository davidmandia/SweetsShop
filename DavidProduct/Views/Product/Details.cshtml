@model Product 

@{
    ViewBag.Title = "Product Detail";
}

<h1>Product Detail</h1>


    <div class="row">
        <div class="col-sm-4">
            <img src="~/Images/@ViewBag.ImageFileName" alt="@Model.Name" class="img-responsive card" />
        </div>
        

        <div class="col-sm-8">
            <h2>@Model.Name</h2>
            <h4>Category: @ViewBag.CategoryName</h4>
            <table class="table table-bordered table-striped">
                <tr>
                <td>List Price:</td>
                    <td>@Model.Price.ToString("C")</td>
                </tr>
                <tr>
                    <td>Discount Percent:</td>
                    <td>@Model.DiscountPercent.ToString("P0")</td>
                </tr>

                <tr>
                    <td>Your Price:</td>
                    <td>@Model.DiscountPrice.ToString("C") 
                    (You saved @Model.DiscountAmount.ToString("C")</td>
                </tr>

            </table>
        </div>
    </div>

<a asp-controller="Home" asp-action="Index" class="btn btn-primary">Home</a>